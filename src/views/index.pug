html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Proyecto Universidad | #{pagina}
        link(rel="stylesheet", href="/css/app.css")
    body(class="min-h-screen relative")  
        // Video de fondo responsivo
        video(class="absolute top-0 left-0 w-full h-full object-cover z-0", autoplay, muted, loop, playsinline, src="/fondo.mp4")

        
        nav(class="  shadow z-10 flex flex-col w-full relative")
            .container.mx-auto.px-4
                .flex.justify-between.items-center.h-16
                    a(class="text-xl font-bold text-fluor", href="/") Proyecto Universidad 
                    ul.flex.space-x-4
                        li
                            a(href="/estudiantes/listarEstudiantes" class="text-fluor hover:text-indigo-600  font-bold") Listar Estudiantes
                        li
                            a(href="/profesores/listarProfesores" class="text-fluor hover:text-indigo-600") Listar Profesores
                        li
                            a(href="/cursos/listarCursos" class="text-fluor hover:text-indigo-600") Listar Cursos
                        li
                            a(href="/inscripciones/listarInscripciones" class="text-fluor hover:text-indigo-600") Inscripciones 

        // Contenido principal
        main(class="absolute top-0 left-0 w-full h-full z-10  mix-blend-over")
        
            block contenido
            block scripts    
