extends ./index

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Proyecto
            span.font-normal Universidad
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-extrabold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(method="GET", id="formularioEstudiante")
                    label.block.text-sm.uppercase.text-gray-500.mb-3.font-extrabold(for="id") ID del Estudiante:
                    input.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="number", id="idEstudiante")
                    button.bg-blue-500.text-white.px-4.py-2.rounded-md.mt-4(type="button", onclick="enviarFormulario()") Consultar Estudiante

                script.
                    function enviarFormulario() {
                        const id = document.getElementById('idEstudiante').value;
                        
                        window.location.href = `/estudiantes/consultarEstudiante/${id}`;
                    }