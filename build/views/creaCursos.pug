extends  ./index

block contenido
    .py-10
        h1.text-4xl.my-10font-extrabold.text-center Universidad
            span.font-normal Universidad 
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-extrabold= error.msg

        .mt-8.mx-auto.max-w-md 
            .bg-whithe.py-8.px-4.shadow 
                form.space-y-5(method='POST' action='/cursos' noValidate) 
                    .space-y-5
                        div
                            label.block.text-sm.font-extrabold.text-gray-700(for='nombre') Nombre  
                            input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nombre" type="text" name="nombre")

                        div
                            label.block.text-sm.font-extrabold.text-gray-700(for="descripcion") Descripción
                            textarea#descripcion.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Descripción" type="text" name="descripcion")
                        div
                            label.block.text-sm.font-extrabold.text-gray-700(for='profesor_id') Profesores
                            select#profesor.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Profesores" type="text" name="profesor_id")
                                 each profesor in profesores
                                       option(value=profesor.id)= profesor.nombre  

                        div
                            button.bg-blue-500.text-white.px-4.py-2.rounded-md(type='submit') Crear Curso