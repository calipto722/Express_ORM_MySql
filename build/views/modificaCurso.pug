extends index
block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Proyecto
            span.font-normal Universidad
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-extrabold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(method='POST' action=`/cursos/${curso.id}?_method=PUT` noValidate)
                    
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-extrabold(for="nombre") Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nombre del curso" type="text" name="nombre" value=curso.nombre)

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-extrabold(for="descripcion") Descripción
                        input#descripcion.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Descripción" type="text" name="descripcion" value=curso.descripcion)

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-extrabold(for="profesor_id") Profesor
                        select#profesor_id.w-full.px-3.py-2.border.border-gray-300.rounded-md( name="profesor_id" )
                             each profesor in profesores
                                option(value=profesor.id selected=curso.profesor && curso.profesor.id === profesor.id)= profesor.nombre

                    button.bg-blue-500.text-white.px-4.py-2.rounded-md.mt-4(type="submit") Modificar Curso
