extends ./index

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Proyecto
            span.font-normal Universidad
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-extrabold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method='POST' action='/inscripciones' noValidate)
                  
                    
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-extrabold(for="estudiante" ) Estudiante 
                        select#estudiante.w-full.px-3.py-2.border.border-gray-300.rounded-md( name="estudiante" )
                             each estudiante in estudiantes
                                option(value=estudiante.id selected=estudiante.id)= estudiante.nombre

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-extrabold(for="nombre") Nombre
                        select#estudiante.w-full.px-3.py-2.border.border-gray-300.rounded-md(name="curso" )
                             each curso in cursos
                                option(value=curso.id selected=curso.id)= curso.nombre
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-extrabold(for="nota") Nota
                        input(type="number" name="nota" min=0 max=10) 
                    
                    div
                        input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Registrar Estudiante")